<xml>

<set name="no_thirdparty_extras" value="1"/>
<set name="tool" value="static"/>
<set name="mobile" value="1"/>

<set name="ndll-tool" value="static"/>
<set name="name_extra" value=".iphoneos" if="iphoneos"/>
<set name="name_extra" value=".iphonesim" if="iphonesim"/>
<include name="${HXCPP}/build-tool/BuildCommon.xml"/>
<set name="SLIBEXT" value=".a"/>

<files id="iphone">
  <depend name="${HXCPP}/include/hx/Macros.h"/>
  <depend name="${HXCPP}/include/hx/CFFI.h"/>
  <compilerflag value="-IiPhone/include"/>
  <compilerflag value="-Iinclude"/>
  <file name="iPhone/Fb.mm"/>
</files>

<files id="common">
  <compilerflag value="-Iinclude"/>
  <file name="common/ExternalInterface.cpp"/>
</files>

<target id="NDLL" output="libfb${name_extra}" tool="linker" toolid="${ndll-tool}">
        
  <outdir name="../ndll/${BINDIR}"/>
  <files id="iphone"/>
  <files id="common"/>
        
</target>

<target id="default">
   <target id="NDLL"/>
</target>
</xml>